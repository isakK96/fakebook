<!DOCTYPE html>
<html>
  <head>
    <title>Fakebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%# <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" %>
  </head>

  <%# top navbar %>
  <body>
    <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to "Fakebook", root_path, class: 'title' %>
      </div>
      <div class="navbar-start">
      </div>
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <% if current_user %>
              <%= link_to current_user.username, current_user, class: 'button is-link' %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'button is-link' %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: 'button is-link' %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <%# notices %>
    <%= render "layouts/flash" %>

    <%# side navbar %>
    <% if current_user %>
      <div class="columns is-fullheight">
        <div class="column is-2">
          <aside class="menu">
            <ul class="menu-list">
              <li>
                <%= link_to(root_path) do %>
                  <%= fa_icon "home", text: "Home", class: "icon" %>
                <% end %>
              </li>
              <li>
                <%= link_to(user_path(current_user)) do %>
                  <%= fa_icon "user", text: "Profile", class: "icon" %>
                <% end %>
              </li>
              <li>
                <%= link_to(root_path) do %>
                  <%= fa_icon "users", text: "Friends", class: "icon" %>
                <% end %>
              </li>
              <li>
                <%= link_to(root_path) do %>
                  <%= fa_icon "cog", text: "Settings", class: "icon" %>
                <% end %>
              </li>
            </ul>
          </aside>
        </div>
      </div>
    <% end %>

    <%= yield %>
    <footer class="footer">
      <div class="content has-text-centered">
        <p>
          <strong>Fakebook</strong> by <a href="https://github.com/isakK96">isakk96</a>.
        </p>
      </div>
    </footer>
  </body>
</html>
